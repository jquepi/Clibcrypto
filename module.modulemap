module ClibcryptoMac [system] {
    header "/usr/local/opt/libressl/include/openssl/crypto.h"
    header "/usr/local/opt/libressl/include/openssl/evp.h"
    header "/usr/local/opt/libressl/include/openssl/rand.h"
    header "/usr/local/opt/libressl/include/openssl/hmac.h"
    header "/usr/local/opt/libressl/include/openssl/md4.h"
    header "/usr/local/opt/libressl/include/openssl/md5.h"
    header "/usr/local/opt/libressl/include/openssl/sha.h"
    header "/usr/local/opt/libressl/include/openssl/ripemd.h"

	link "crypto"
 	export *
}

